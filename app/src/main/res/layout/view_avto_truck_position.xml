                android:paddingBottom="16.0dip" />

            <TextView
                android:id="@+id/vehicle_truck_position_06_tv"
                style="@style/VehicleMarkStyle"
                android:paddingBottom="20.0dip"
                android:text="6" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frame_truck_position_07"
            style="@style/VehicleOnTruckFrameStyle"
            android:layout_toRightOf="@id/frame_truck_position_06">

            <ImageButton
                android:id="@+id/vehicle_truck_position_07"
