            android:layout_height="fill_parent" />

        <FrameLayout
            android:id="@+id/frame_truck_position_06"
            style="@style/VehicleOnTruckFrameStyle"
            android:layout_toRightOf="@id/line2_shifter">

            <ImageButton
                android:id="@+id/vehicle_truck_position_06"
