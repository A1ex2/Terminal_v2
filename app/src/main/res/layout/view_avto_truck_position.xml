                android:paddingTop="13.0dip" />

            <TextView
                android:id="@+id/vehicle_truck_position_05_tv"
                style="@style/VehicleMarkStyle"
                android:paddingTop="9.0dip"
                android:text="5" />
        </FrameLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/line2_layout"
        android:layout_width="fill_parent"
        android:layout_height="55.0dip"
        android:layout_below="@id/line1_layout"
        android:orientation="horizontal">

        <View
