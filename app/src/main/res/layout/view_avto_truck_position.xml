        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_gravity="bottom"
        android:scaleType="centerInside"
        android:src="@mipmap/autotruck_back" />

    <RelativeLayout
        android:id="@+id/line1_layout"
        android:layout_width="fill_parent"
        android:layout_height="55.0dip"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/line1_shifter"
            android:layout_width="14.0dip"
            android:layout_height="fill_parent" />

        <FrameLayout
            android:id="@+id/frame_truck_position_01"
            style="@style/VehicleOnTruckFrameStyle"
            android:layout_toRightOf="@id/line1_shifter">

            <ImageButton
                android:id="@+id/vehicle_truck_position_01"
                style="@style/VehicleOnTruckStyle"
                android:paddingTop="13.0dip" />

            <TextView
                android:id="@+id/vehicle_truck_position_01_tv"
                style="@style/VehicleMarkStyle"
                android:paddingTop="9.0dip"
                android:text="1" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frame_truck_position_02"
            style="@style/VehicleOnTruckFrameStyle"
            android:layout_toRightOf="@id/frame_truck_position_01">

            <ImageButton
                android:id="@+id/vehicle_truck_position_02"
                style="@style/VehicleOnTruckStyle"
                android:paddingTop="13.0dip" />

            <TextView
                android:id="@+id/vehicle_truck_position_02_tv"
                style="@style/VehicleMarkStyle"
                android:paddingTop="9.0dip"
                android:text="2" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frame_truck_position_03"
            style="@style/VehicleOnTruckFrameStyle"
            android:layout_toRightOf="@id/frame_truck_position_02">

            <ImageButton
                android:id="@+id/vehicle_truck_position_03"
                style="@style/VehicleOnTruckStyle"
                android:paddingTop="13.0dip" />

            <TextView
                android:id="@+id/vehicle_truck_position_03_tv"
                style="@style/VehicleMarkStyle"
                android:paddingTop="9.0dip"
                android:text="3" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frame_truck_position_04"
            style="@style/VehicleOnTruckFrameStyle"
            android:layout_toRightOf="@id/frame_truck_position_03">

            <ImageButton
                android:id="@+id/vehicle_truck_position_04"
                style="@style/VehicleOnTruckStyle"
                android:paddingTop="13.0dip" />

            <TextView
                android:id="@+id/vehicle_truck_position_04_tv"
                style="@style/VehicleMarkStyle"
                android:paddingTop="9.0dip"
                android:text="4" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frame_truck_position_05"
            style="@style/VehicleOnTruckFrameStyle"
            android:layout_toRightOf="@id/frame_truck_position_04">

            <ImageButton
                android:id="@+id/vehicle_truck_position_05"
