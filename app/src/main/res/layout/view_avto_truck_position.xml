                android:paddingBottom="20.0dip"
                android:text="9" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frame_truck_position_10"
            style="@style/VehicleOnTruckFrameStyle"
            android:layout_toRightOf="@id/frame_truck_position_09">

            <ImageButton
                android:id="@+id/vehicle_truck_position_10"
                style="@style/VehicleOnTruckStyle"
                android:paddingBottom="16.0dip" />

            <TextView
                android:id="@+id/vehicle_truck_position_10_tv"
